{
  "manifest_version": 3,
  "name": "Orbitar â€“ AI Prompt Refiner",
  "version": "0.1.0",
  "description": "Refine your prompts with AI, using only the text you type or select.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://getorbitar.com/*",
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "http://127.0.0.1:3000/*",
    "http://127.0.0.1:3001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["adapters/chatgpt.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "refine-prompt": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Refine current text with Orbitar"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon48.png", "content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
