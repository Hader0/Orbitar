generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  apiKeys       ApiKey[]

  plan              String    @default("free") // free, builder, pro
  dailyUsageCount   Int       @default(0)
  dailyUsageResetAt DateTime  @default(now())
  stripeCustomerId  String?
  stripeSubscriptionId String?
  stripeSubscriptionStatus String?

  allowDataUse      Boolean   @default(false)
  defaultIncognito  Boolean   @default(false)
  promptLabOptIn    Boolean   @default(false)

  promptEvents      PromptEvent[]
  refineEvents      RefineEvent[]

  templatePreferences UserTemplatePreference[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique // In a real app, hash this. For simplicity here, we might keep it plain or hash it.
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  lastUsedAt DateTime?
  revoked    Boolean  @default(false)
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PromptEvent {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())

  user         User?     @relation(fields: [userId], references: [id])
  userId       String?

  plan         String?   // e.g. "free", "light", "pro"
  source       String?   // "chatgpt", "notion", etc.
  category     String?
  templateId   String?
  model        String?
  modelStyle   String?   // "fast", "precise", etc.
  latencyMs    Int?
  status       String?   // "success", "error_<type>"
  inputTokens  Int?
  outputTokens Int?
  incognito    Boolean?  // whether this refine was incognito
}

model UserTemplatePreference {
  id         String @id @default(cuid())
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  templateId String
  enabled    Boolean @default(true)

  @@unique([userId, templateId])
}

model RefineEvent {
  id                 String     @id @default(cuid())
  createdAt          DateTime   @default(now())

  user               User?      @relation(fields: [userId], references: [id])
  userId             String?

  plan               String
  category           String
  templateId         String
  templateVersion    String

  rawTextLength      Int
  refinedTextLength  Int

  acceptedAt         DateTime?
  reverted           Boolean    @default(false)
  // Allowed values: "none" | "light" | "heavy"
  editDistanceBucket String?

  promptLabOptIn     Boolean    @default(false)
  isIncognito        Boolean    @default(false)

  promptSamples      PromptSample[]

  @@map("refine_events")
}

//
// Prompt Lab core tables (schema only)
//

model SyntheticTask {
  id         String   @id @default(cuid())
  category   String   // e.g. "coding" | "writing" | ...
  inputText  String
  difficulty String?  // optional, e.g. "easy" | "medium" | "hard"
  tags       String?  // JSON string (SQLite lacks native Json)

  createdAt  DateTime @default(now())
  labRuns    LabRun[]
}

model PromptSample {
  id              String       @id @default(cuid())
  refineEventId   String?
  refineEvent     RefineEvent? @relation(fields: [refineEventId], references: [id])

  source          String       // e.g. "user_opt_in" | "internal" | "other"
  category        String
  rawText         String
  refinedText     String?
  plan            String
  templateSlug    String?
  templateVersion String?

  createdAt       DateTime     @default(now())

  labRuns         LabRun[]
}

model LabRun {
  id               String         @id @default(cuid())
  templateSlug     String
  templateVersion  String
  taskType         String         // "synthetic" | "sample"

  syntheticTaskId  String?
  syntheticTask    SyntheticTask? @relation(fields: [syntheticTaskId], references: [id])

  promptSampleId   String?
  promptSample     PromptSample?  @relation(fields: [promptSampleId], references: [id])

  modelName        String
  status           String         // "pending" | "running" | "done" | "error"
  errorMessage     String?

  rawRefinedPrompt String?

  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  scores           LabScore[]
}

model LabScore {
  id             String  @id @default(cuid())
  labRunId       String
  labRun         LabRun  @relation(fields: [labRunId], references: [id])

  structureScore Float?
  contractScore  Float?
  domainScore    Float?
  overallScore   Float?
  metricsJson    String?  // JSON string (SQLite lacks native Json)

  createdAt      DateTime @default(now())
}
