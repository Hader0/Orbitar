generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                       String                   @id @default(cuid())
  name                     String?
  email                    String?                  @unique
  emailVerified            DateTime?
  image                    String?
  plan                     String                   @default("free")
  dailyUsageCount          Int                      @default(0)
  dailyUsageResetAt        DateTime                 @default(now())
  stripeCustomerId         String?
  stripeSubscriptionId     String?
  stripeSubscriptionStatus String?
  allowDataUse             Boolean                  @default(false)
  defaultIncognito         Boolean                  @default(false)
  promptLabOptIn           Boolean                  @default(false)
  createdAt                DateTime                 @default(now())
  updatedAt                DateTime                 @updatedAt
  accounts                 Account[]
  apiKeys                  ApiKey[]
  promptEvents             PromptEvent[]
  sessions                 Session[]
  templatePreferences      UserTemplatePreference[]
  refineEvents             RefineEvent[]
}

model ApiKey {
  id         String    @id @default(cuid())
  key        String    @unique
  userId     String
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime?
  revoked    Boolean   @default(false)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PromptEvent {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  userId       String?
  plan         String?
  source       String?
  category     String?
  templateId   String?
  model        String?
  modelStyle   String?
  latencyMs    Int?
  status       String?
  inputTokens  Int?
  outputTokens Int?
  incognito    Boolean?
  user         User?    @relation(fields: [userId], references: [id])
}

model UserTemplatePreference {
  id         String  @id @default(cuid())
  userId     String
  templateId String
  enabled    Boolean @default(true)
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, templateId])
}

model RefineEvent {
  id                 String         @id @default(cuid())
  createdAt          DateTime       @default(now())
  userId             String?
  plan               String
  category           String
  templateId         String
  templateVersion    String
  rawTextLength      Int
  refinedTextLength  Int
  acceptedAt         DateTime?
  reverted           Boolean        @default(false)
  editDistanceBucket String?
  promptLabOptIn     Boolean        @default(false)
  isIncognito        Boolean        @default(false)
  promptSamples      PromptSample[]
  user               User?          @relation(fields: [userId], references: [id])

  @@map("refine_events")
}

model SyntheticTask {
  id         String   @id @default(cuid())
  category   String
  inputText  String
  difficulty String?
  tags       String?
  createdAt  DateTime @default(now())
  labRuns    LabRun[]
}

model PromptSample {
  id              String       @id @default(cuid())
  refineEventId   String?
  source          String
  category        String
  rawText         String
  refinedText     String?
  plan            String
  templateSlug    String?
  templateVersion String?
  createdAt       DateTime     @default(now())
  labRuns         LabRun[]
  refineEvent     RefineEvent? @relation(fields: [refineEventId], references: [id])
}

model LabRun {
  id               String         @id @default(cuid())
  templateSlug     String
  templateVersion  String
  taskType         String
  syntheticTaskId  String?
  promptSampleId   String?
  modelName        String
  status           String
  errorMessage     String?
  rawRefinedPrompt String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  promptSample     PromptSample?  @relation(fields: [promptSampleId], references: [id])
  syntheticTask    SyntheticTask? @relation(fields: [syntheticTaskId], references: [id])
  scores           LabScore[]
}

model LabScore {
  id             String   @id @default(cuid())
  labRunId       String
  structureScore Float?
  contractScore  Float?
  domainScore    Float?
  overallScore   Float?
  metricsJson    String?
  createdAt      DateTime @default(now())
  labRun         LabRun   @relation(fields: [labRunId], references: [id])
}
